.bagMessage-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.priceAndChoose-container {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-top: 90rpx;
}

.line-container {
  height: 2rpx;
  background-color: #353535;
  width: 90%;
  margin: 20rpx auto 0;
}

.parts-body {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 40rpx;
}

/* 添加自定义部件 */

.addYourStyle {
  width: 75px;
  height: 75px;
  padding: 0;
  margin: 0;
}

/* 部件布局 */

.partsPhoto-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.button-container {
  display: flex;
  flex-direction: row;
  border-radius: 0;
}

.afterCheck {
  background-color: wheat !important;
  border-radius: 0;
}

.addToShoppingCar {
  flex-grow: 1;
  color: white;
  background-color: #f2a204;
  border-radius: 0;
}

.checkShoppingCar {
  flex-grow: 1;
  color: white;
  background-color: #cfcfcf;
  border-radius: 0;
}

.buyRightNow {
  flex-grow: 1;
  color: white;
  background-color: red;
  border-radius: 0;
}

.sum-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
}

/*主容器*/

.stepper {
  width: 80px;
  height: 26px;
  /*给主容器设一个边框*/
  border: 1px solid #ccc;
  border-radius: 3px;
}

/*加号和减号*/

.stepper text {
  width: 19px;
  line-height: 26px;
  text-align: center;
  float: left;
}

/*数值*/

.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  /*给中间的input设置左右边框即可*/
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: black;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

/* 点亮选择部件 */

.is_checked {
  background-color: #14a1fd;
  color: #fff;
  border: 2rpx solid #fff;
}

.is_checked>checkbox {
  color: red;
}
